[% ELSIF SiteName == "ECF"  %]
 [% IF PAGE == 'GarlicCulture' %]
  [% PROCESS Garlicculturesql.ttml %]
 [% ELSIF PAGE == 'SustainableView' %] call SustainableView
  [% PROCESS ECFSustainablesql.ttml %]
 [% ELSE %]
 [% PROCESS ECFUrbanFarmingsql.ttml %]
 [% END %]
[%  ELSIF SiteName ==  'Forager' %]
