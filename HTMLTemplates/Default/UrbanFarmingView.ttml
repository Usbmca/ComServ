   [% PAGE = data.page_name || 'HomeView' %]
[%# page = 'GarlicCulture' %]

  [% PROCESS DefaultDbi.ttml %]
 
[% IF SiteName == 'CSC' %]
 [% PROCESS CSCHOMEPagesql.ttml %]
